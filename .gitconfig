[branch]
	sort = -committerdate
[commit]
	verbose = true
[core]
	excludesfile = ~/.gitignore
[init]
	defaultBranch = main
[merge]
	conflictstyle = diff3
[push]
	autosetupremote = true
	# push --force-with-lease to check if there are new remote changes
[rebase]
	autostash = true
[rerere]
	enabled = true
[url "git@github.com:"]
	insteadOf = "https://github.com/"

# Include custom git configs to override the default settings
[includeIf "gitdir:~/repos/wrk/"]
	path = "~/repos/wrk/.gitconfig"
[includeIf "gitdir:~/repos/gh/"]
	path = "~/repos/gh/.gitconfig"